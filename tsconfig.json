{
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNEXT",
    "module": "es2015",
    "jsx": "react",
    "noEmit": true,
    "importHelpers": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./src",

    /* Experimental Options */
    "experimentalDecorators": true
  }
}
